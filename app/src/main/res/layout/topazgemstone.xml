<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topazLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topazgem"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topaz Gemstone Guide"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topaz comes in a wide range of colors, making it one of the\n most versatile, stunning, and sought-after gemstones globally."
            android:textSize="8dp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topazLayout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is topaz?"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Amethyst is a gemstone celebrated for its vivid purple hues, spanning from pale lavender to rich violet. It is commonly found in geodes within volcanic rocks and in hydrothermal veins, where it forms well-shaped crystals that are perfect for cutting and polishing into beautiful jewelry."
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/inria_sans"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topazmeaning"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topaz Meaning"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Topaz is a gemstone that symbolizes love, affection, and good fortune. Throughout history, it has been believed to possess various healing and protective powers. Topaz is often associated with clarity of thought, truthfulness, and emotional balance. It is also regarded as a symbol of strength and protection, thought to repel negativity and boost self- confidence."
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/inria_sans"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topazclor"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topaz Color"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Topaz is known for its diverse range of colors, which include:\n
Colorless (White) Topaz : Pure topaz is naturally colorless.\n
Blue Topaz: Varies from light sky blue to intense London blue. Most blue topaz\n
on the market is treated to enhance its color.\n
Imperial Topaz: Exhibits rich shades of orange, pink, and red, and is the most\n
valuable variety.\n
Golden Topaz: Naturally golden yellow, often mistaken for citrine.
Pink Topaz: Can vary from a gentle pink to a bold reddish-pink. Natural\n
pink topaz is rare.\n
Mystic Topaz: Displays a rainbow of colors due to a coating applied to the\n
surface of colorless topaz."
                android:textAlignment="textStart"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/inria_sans"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topaztreatment"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topaz Treatment"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Topaz is frequently treated to enhance or alter its color:\
Heat Treatment: Used to produce pink, red, and orange hues from yellow or brow\n
topaz.\n
Irradiation: Commonly used in combination with heat treatment to create various \n
shades of blue topaz.\n
 Coating: A delicate coating of titanium is added to colorless topaz to create the\n
  Mystic Topaz effect, which imparts an iridescent quality to the stone."
                android:textAlignment="textStart"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/inria_sans"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topazproperties"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topaz Properties"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textSize="26dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohs Hardness \n8"
                    android:layout_marginStart="5dp"
                    android:textSize="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02"
                    android:textSize="26dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mineral\n Topaz"
                    android:layout_marginStart="5dp"
                    android:textSize="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03"
                    android:textSize="26dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Refractive Index \n1.619 to 1.627"
                    android:textSize="10dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topazprice"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Topaz Price\n\n
The worth of topaz varies depending on factors like color, size, and overall quality. \n
Blue topaz is generally more affordable due to its abundance. In contrast, Imperial Topaz \n
and other rare hues can reach prices ranging from several hundred to several thousand\n
dollars per carat, depending on the depth of color and clarity.\n\n\n
Topaz Origins \n
Topaz is frequently mined in Brazil, Pakistan, and Nigeria. Brazil is the leading producer,\n
especially renowned for its abundant Imperial Topaz reserves. Other significant sources\n
of topaz include the United States, Mexico, and Sri Lanka."
                android:textAlignment="textStart"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/inria_sans"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topaz Cleaning &amp; Care Tips"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/inria_sans"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="To maintain your topaz gemstone's appearance, regularly clean it with warm, soapy water and a soft cloth or brush. Steer clear of harsh chemicals, as well as ultrasonic or steam cleaners, which can harm the stone. Handle with care, and store topaz jewelry separately to avoid scratches from harder gems."
                android:textAlignment="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/inria_sans"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>