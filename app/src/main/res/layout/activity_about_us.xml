<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activity.MenuNavDEtailsStatic.About.AboutUsActivity">

    <RelativeLayout
        android:id="@+id/aboutTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="20dp">
        <ImageView
            android:id="@+id/aboutBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutTopBar"
        android:scrollbars="none"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ouratoryAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_layout"
                android:text="Our Story"/>
            <TextView
                android:id="@+id/ourmissionAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Our Mission"/>
            <TextView
                android:id="@+id/responsiblesourcingAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Responsible Sourcing"/>
            <TextView
                android:id="@+id/blogAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Blog"/>
            <TextView
                android:id="@+id/sustainabilitygoalsAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Sustainability Goals"/>
            <TextView
                android:id="@+id/givebackAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="How We Give Back"/>


        </LinearLayout>



    </HorizontalScrollView>


</LinearLayout>