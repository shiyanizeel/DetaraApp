<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activity.MenuNavDEtailsStatic.EngagementRings.EngagementRingGuideActivity">
    <RelativeLayout
        android:id="@+id/engagementRingGuideTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="20dp">
        <ImageView
            android:id="@+id/engagementRingGuideBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engagement Ring Guide"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/engagementRingGuideTopBar"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ringStyleGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_layout"
                android:text="Engagement Ring style Guide"/>
            <TextView
                android:id="@+id/spendRingGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="How much to Spend \n On An Engagement Rings"/>
            <TextView
                android:id="@+id/freeRingSizeGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Free Ring Sizer"/>
            <TextView
                android:id="@+id/trendRingsGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="2024 Engagement Ring Trands"/>


        </LinearLayout>



    </HorizontalScrollView>

</LinearLayout>