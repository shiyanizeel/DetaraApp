<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_layout"
    android:elevation="10dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/petalsrelativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

     <ImageView
         android:id="@+id/itemDetailsImg"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/solitraire"
         android:layout_marginHorizontal="10dp"
         android:elevation="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
           android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/itemDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:elevation="5dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:text="Petals 4 Prong Solitaire Ring"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/itemDetailsColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:elevation="5dp"
                android:text="Color:"
                android:textSize="14dp"/>

<LinearLayout
    android:id="@+id/jeweleryDetailsCartContain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemDetailsCaret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="Caret:"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/itemDetailsSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size:"
        android:paddingVertical="5dp"
        android:elevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/petalsProngView3"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/itemDetailsMetal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metal:"
        android:paddingVertical="5dp"
        android:elevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/petalsProngView3"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/itemDetailsWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:paddingVertical="5dp"
        android:elevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/petalsProngView3"
        android:textSize="14dp" />


</LinearLayout>





        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/itemDetailsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:elevation="5dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:text="$850 USD"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:gravity="center"
        android:weightSum="3"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/border_bg"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="5dp"
            android:layout_marginVertical="10dp">
            <ImageView
                android:id="@+id/productminimize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:src="@drawable/baseline_minimize_24" />

            <TextView

                android:id="@+id/productCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginHorizontal="10dp"
                android:textSize="24dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/productadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_24" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/itemDetailsRemove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Remove" />

    </LinearLayout>


</LinearLayout>