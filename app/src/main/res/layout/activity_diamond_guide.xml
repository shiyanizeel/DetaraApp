<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activity.MenuNavDEtailsStatic.DiamondGuide.DiamondGuideActivity">

    <RelativeLayout
        android:id="@+id/engagementRingGuideTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="20dp">
        <ImageView
            android:id="@+id/diamondGuideBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diamond Guide"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/diamondGuideBackBtn"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/diamondCutGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_layout"
                android:text="Dimond Cut Guide"/>
            <TextView
                android:id="@+id/diamondColorGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Diamond Color Guide"/>
            <TextView
                android:id="@+id/diamondClarityGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Diamond Clarity Guide"/>
            <TextView
                android:id="@+id/diamondCaratGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Diamond Carat Guide"/>
            <TextView
                android:id="@+id/labDiamondGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Lab Diamond Guide"/>
            <TextView
                android:id="@+id/customCutLab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/btn_layout"
                android:text="Custom Cut Lab Grown  Diamonds "/>


        </LinearLayout>



    </HorizontalScrollView>


</LinearLayout>